<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bgcolorLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff722294">

    <RelativeLayout
        android:id="@+id/bgLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5.0dip">

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/itemImageId"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ximgvwHome3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:clickable="true" />

        <ImageView
            android:id="@+id/prevId"
            android:layout_width="110.0dip"
            android:layout_height="110.0dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15.0dip"
            android:layout_marginBottom="10.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/prev" />

        <ImageView
            android:id="@+id/nextId"
            android:layout_width="110.0dip"
            android:layout_height="110.0dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="15.0dip"
            android:layout_marginBottom="10.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/next" />

        <ImageView
            android:id="@+id/playId"
            android:layout_width="90.0dip"
            android:layout_height="90.0dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-5.0dip"
            android:adjustViewBounds="false"
            android:src="@drawable/play" />

        <ImageView
            android:id="@+id/ximgvwHome2"
            android:layout_width="90.0dip"
            android:layout_height="90.0dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5.0dip"
            android:background="@drawable/bak"
            android:clickable="true"
            android:scaleType="fitCenter" />
    </RelativeLayout>

</RelativeLayout>